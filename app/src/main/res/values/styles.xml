<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowLayoutInDisplayCutoutMode" tools:targetApi="o_mr1">
            shortEdges <!-- default, shortEdges, never -->
        </item>
        <!--        <item name="android:windowTranslucentStatus">true</item>  //make status bar transparent-->
        <item name="android:navigationBarColor">@color/colorPrimaryDark</item>
    </style>

    <style name="AppTheme.FloatingActionButton">
        <item name="colorAccent">@color/red</item>
    </style>

    <style name="CollapsedAppbar" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">normal</item>
    </style>


    <style name="CustomDialog" parent="android:Theme.Dialog">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>

    </style>

    <style name="error_activity_theme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/red</item>
        <item name="colorPrimaryDark">@color/red_btn_bg_color</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <!--    <style name="WhiteTextInputLayout" parent="@android:style/TextAppearance">-->
    <!--        <item name="android:textColor">#FFFFFF</item>-->
    <!--    </style>-->

    <style name="navigationTheme">
        <item name="colorPrimary">@color/white</item>
        <item name="colorControlHighlight">@color/colorPrimary</item>

    </style>

    <!-- Progress Dialog Theme -->
    <style name="MyAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/green</item>
    </style>

    <style name="ExpandedAppbar" parent="@android:style/TextAppearance.Material.Title">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textStyle">normal</item>
    </style>


    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="ToolFont">
        <item name="android:fontFamily">@font/montserratmedium</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/blackBg</item>
        <item name="android:textStyle">bold</item>

    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>
